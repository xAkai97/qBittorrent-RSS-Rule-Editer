{
  "manifest_version": 3,
  "name": "MAL Multi-Select Export (Clipboard)",
  "version": "0.1.0",
  "description": "Injects checkboxes on MyAnimeList pages so you can multi-select anime and copy titles/metadata to the clipboard.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://myanimelist.net/*",
    "*://*.myanimelist.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://myanimelist.net/*", "*://*.myanimelist.net/*"],
      "js": ["content_script.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
